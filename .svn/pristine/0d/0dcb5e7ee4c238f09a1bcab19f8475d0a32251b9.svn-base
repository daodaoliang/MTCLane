    public void updateParamTable(List<String> paramList) {
        int size = paramList.size();
        Object[] columnNames = new Object[3];
        columnNames[0] = "参数名称";
        columnNames[1] = "参数版本号";
        columnNames[2] = "启用时间";
        Object[][] rowData = new Object[size][3];
        for (int i = 0; i < size; i++) {
            String param = paramList.get(i);
            String[] buffer = StringUtils.split(param, ",");
            rowData[i][0] = buffer[0];
            rowData[i][1] = buffer[1];
            rowData[i][2] = buffer[2];
        }
        TableModel model = new DefaultTableModel(rowData, columnNames);
        jTable1.setModel(model);
        jTable1.getTableHeader().setFont(new Font("宋体", Font.BOLD, 24));
        DefaultTableCellRenderer render = new DefaultTableCellRenderer();
        render.setHorizontalAlignment(SwingConstants.CENTER);
        TableColumn column1 = jTable1.getColumn(columnNames[0]);
        column1.setPreferredWidth(160);
        column1.setCellRenderer(render);
        TableColumn column2 = jTable1.getColumn(columnNames[1]);
        column2.setPreferredWidth(25);
        column2.setCellRenderer(render);
        TableColumn column3 = jTable1.getColumn(columnNames[2]);
        column3.setPreferredWidth(40);
        column3.setCellRenderer(render);
        jTable1.setRowHeight(20);
    }
