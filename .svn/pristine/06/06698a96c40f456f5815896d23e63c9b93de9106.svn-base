    private void init() {
        initMsgColor();
        initBackgroundColor();
        jButton1.doClick();
        jButton2.doClick();
        initFont();
        ThreadPoolControl.getThreadPoolInstance().execute(new Runnable() {
            public void run() {
                while (true) {
                    try {
                        Thread.sleep(1000);
                    } catch (InterruptedException ex) {
                    }
                    if(ExtJFrame.getSingleInstance().isUpdatingFont()){
                        jButton6.setEnabled(false);
                    }else{
                        jButton6.setEnabled(true);
                    }
                }

            }
        });

//        jButton6.doClick();
    }

    /**
     * 初始化主界面信息去字体颜色
     */
    private void initMsgColor() {
        String str = MyPropertiesUtils.getProperties(Constant.PROP_MTCLANE, "msgColor", "0,0,0");
        str = str.replaceAll("，", ",");
        String[] buffer = str.split(",");
        if (buffer.length >= 3) {
            String red = buffer[0];
            String green = buffer[1];
            String blue = buffer[2];
            jTextField1.setText(red);
            jTextField2.setText(green);
            jTextField3.setText(blue);
        }
    }

    /**
     * 初始化主界面背景颜色
     */
    private void initBackgroundColor() {
        String str = MyPropertiesUtils.getProperties(Constant.PROP_MTCLANE, "backgroundColor", "153,255,153");
        str = str.replaceAll("，", ",");
        String[] buffer = str.split(",");
        if (buffer.length >= 3) {
            String red = buffer[0];
            String green = buffer[1];
            String blue = buffer[2];
            jTextField4.setText(red);
            jTextField5.setText(green);
            jTextField6.setText(blue);
        }
    }

    /**
     * 初始化字体
     */
    private void initFont() {
        String str = MyPropertiesUtils.getProperties(Constant.PROP_MTCLANE, "ttfPath", "");
        jTextField7.setText(str);
    }

