        System.out.println(Arrays.toString(frame.getRootPane().getComponents()));
        System.out.println(Arrays.toString(p.getComponents()));
        Container p1 = (Container) p.getComponent(1);
        Component[] comps = p1.getComponents();
        for (int i = 0; i < comps.length; i++) {
            p1.remove(i);
        }
