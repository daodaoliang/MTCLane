package com.hgits.hardware;

/**
 * 倒车检测器
 *
 * @author Wang Guodong
 */
public interface VBD extends Runnable{

    
    /**
     * 车辆倒车
     *
     * @return true/false
     */
    public boolean isVehBack();

    /**
     * 设置倒车标识
     *
     * @param flag 倒车标识
     */
    public void setVehBack(boolean flag);

    /**
     * 获取设备异常信息
     *
     * @return 设备异常信息
     */
    public String getErrorMsg();
    /**
     * 停止运行
     */
    public void stop();
}
